                $dialog = dialog("Chat", %(msg => "you are hacked !".beacon_info($bid,"id"),bid => $bid), &Send);
                dialog_description($dialog, "Send a message to the host.");
                drow_text_big($dialog,"msg","Message:");
                dbutton_action($dialog, "Send");
                dialog_show($dialog);
